@model OJP.Models.EditProfileModel

<h2 class="text-center">Edit profile</h2>

@using (Html.BeginForm("ChangeProfileDetail", "Home", FormMethod.Post, new {id="formRegistration",enctype="multipart/form-data"}))
{ 
   @Html.HiddenFor(x=>x.Id)
<div class="form-group">
   <label for="First Name" class="col-md-3 control-label">First Name</label>
    <div class="col-md-9">
      @Html.TextBoxFor(x =>x.FirstName, "", new { @class = "form-control", placeholder = "Enter your First name here" })
    @Html.ValidationMessageFor(x => x.FirstName,"",new{@class="text-danger"})
   </div>
</div>
<br/>

<div class="form-group">
   <label for="First Name" class="col-md-3 control-label">Last Name</label>
    <div class="col-md-9">
      @Html.TextBoxFor(x =>x.LastName, "", new { @class = "form-control", placeholder = "Enter your Last name here" })
    @Html.ValidationMessageFor(x => x.LastName,"",new{@class="text-danger"})
   </div>
</div>
<br/>

<div class="form-group">
   <label for="email" class="col-md-3 control-label">Age</label>
<div class="col-md-9">
   @Html.TextBoxFor(x => x.Age, "", new { @class = "form-control", placeholder = "Enter your Age" })
   @Html.ValidationMessageFor(x => x.Age,"",new{@class="text-danger"})
   </div>
</div>
<br/>

<div class="form-group">
   <label for="password" class="col-md-3 control-label">Address</label>
<div class="col-md-9">
   @Html.TextAreaFor(x => x.Address, new { @class = "form-control", placeholder = "Enter your address here" })
    @Html.ValidationMessageFor(x => x.Address,"",new{@class="text-danger"})
</div>
</div>
<br/>

<div class="form-group">
   <label for="contact" class="col-md-3 control-label">Email</label>
<div class="col-md-9">
   @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your Email" })
   @Html.ValidationMessageFor(x => x.Email,"",new{@class="text-danger"})
</div>
</div>
<br/>

<div class="form-group">
   <label for="contact" class="col-md-3 control-label">Password</label>
<div class="col-md-9">
   @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your Password" })
   @Html.ValidationMessageFor(x => x.Password,"",new{@class="text-danger"})
</div>
</div>
<br/>

<div class="form-group">
   <label for="Profile" class="col-md-3 control-label">Profile</label>
<div class="col-md-9">
   <input type="file" name="Profile"/>
</div>
</div>
<br/>

<div class="form-group">
   <label for="Phone" class="col-md-3 control-label">PhoneNumber</label>
<div class="col-md-9">
   @Html.TextBoxFor(x => x.Phone, "", new { @class = "form-control", placeholder = "Phone no" })
   @Html.ValidationMessageFor(x => x.Phone,"",new{@class="text-danger"})
   </div>
</div>
<br/>

<div class="form-group">
   <label for="Role" class="col-md-3 control-label">Role</label>
<div class="col-md-9">  
    Recruiter
    @Html.RadioButtonFor(x => x.RoleType, OJP.Models.Common.Recruiter)  
    Seeker  
    @Html.RadioButtonFor(x => x.RoleType, OJP.Models.Common.Seeker,new{ Checked="Checked"})  
</div>
</div>
<br/>

<div class="col-md-offset-3 col-md-9">
   <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Submit</button>
   <span style="margin-left:8px;"></span>
</div>

}

